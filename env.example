# Application settings
APP_NAME=KristyLessonRecords
APP_PORT=8000
APP_ENV=development

# Database
DATABASE_URL=postgresql://user:password@postgres:5432/lesson_records
REDIS_URL=redis://redis:6379/0

# Recall.ai settings
RECALL_API_KEY=your_recall_api_key_here
RECALL_WEBHOOK_URL=https://ai.dr-study.ru/webhooks/recall
RECALL_REGION=us-west-2

# AssemblyAI settings
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# YandexGPT settings
YANDEX_FOLDER_ID=your_folder_id_here
YANDEX_API_KEY=your_yandex_api_key_here
YANDEX_MODEL_URI=gpt://your_folder_id/yandexgpt-lite

# Storage settings
STORAGE_TYPE=local
STORAGE_PATH=/app/storage

# Language settings
SUPPORTED_LANGUAGES=zh,en,ru
DEFAULT_LANGUAGE=ru

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json 